        <div class="join">
            <a href="#">Join</a>
            <div class="line"></div>
            <a href="#">Sign In</a>
            <div id="circularBox">
                <img src="/icons/user.svg" alt="">
            </div>
            
        </div>
    </div>
    <hr class="borderBottom">
</div >

<!-- Filters -->
<div class="filterDiv">
    <div class="connectingRoom">
        <p id="inputDateScript"> &#x3c; Connecting Room Reservations <a href="">Learn More</a> &#x3e; </p>
    </div>

    <div class="inputDate">
        <h3>Your Stay </h3>
        <img src="/icons/calender.svg" alt="">
        <p> Wed, Dec 22 – Thur, Dec 23, 2021(1 night)</p>
        <div class="verticalLine"></div>
        <img src="/icons/people.svg" alt="">
        <p>1 room for 1 adult</p>
        <div class="verticalLine"></div>
        <a href="">Edit Sttay</a>
    </div>
    
    <div class="hrLine"></div>
</div>

<!-- select Rate -->

<div class="selectRoom">
    <div class="selectLeft">
        <div class="selectRate">
            <p>Step 1 of 2</p>
            <h2>Select a Rate</h2>
            <div class="hrLine dark"></div>
            <div class="roomFilter">
                <a href="#" class="btnMini">Special Rates</a>
                <input type="checkbox" value="UsePointsMoney">
                <label for="">Use Points & Money</label>
                <p>Avg/night including tax in ₹GDP</p>
            </div>
        </div>

        <div class="hrLine"></div>

        <div class="discountPrice">
            <div class="bestPrice">
                <h3>Best Available Rate</h3>
                <p>Change or cancel up to 1 day before arrival.</p>
            </div>
            <div>
                <div class="priceInfo">
                    <h2>₹<%= 2000+ +`${hotel[0].property_id.substring(0, 5)}`%></h2>
                    <img src="/icons/moreinfo.svg" alt="">
                </div>
                <a href="#" class="btnMini largeBtn">Book</a>
            </div>
            <div class="honorPrice">
                <h4>Honors Discount</h4>
                <div class="honorpriceInfo">
                    <h2>₹<%= `${hotel[0].property_id.substring(0, 5)}`%></h2>
                    <img src="/icons/moreinfo.svg" alt="">
                </div>
                
                <a href="/hotels/selectedHotel/payment/<%= hotel[0]._id%>" class="btnMini largeBtn darkBtn">Book</a>
            </div>
           
        </div>
        <div class="hrLine"></div>


        <div class="packageDeal">
            <div>
                <h4>Make it a package deal</h4>
            </div>
            <div class="shortHrLine"> </div>
        </div>
        

        <div class="discountPrice">
            <div class="bestPrice">
                <h3>Honors Discount Breakfast Included</h3>
                <p>Change or cancel up to 1 day before arrival. Breakfast included. Hilton Honors members only.</p>
            </div>
            <div>
               
            </div>
            <div class="honorPrice">
               
                <div class="honorpriceInfo">
                    <h2>₹<%=1000+  +`${hotel[0].property_id.substring(0, 5)}`%></h2>
                    <img src="/icons/moreinfo.svg" alt="">
                </div>
                
                <a href="#" class="btnMini largeBtn ">Book</a>
            </div>
           
        </div>
        <div class="hrLine"></div>

        <div class="discountPrice">
            <div class="bestPrice">
                <h3>Breakfast Included</h3>
                <p>Change or cancel up to 1 day before arrival. Includes breakfast daily.</p>
            </div>
            <div>
                
            </div>
            <div class="honorPrice">
               
                <div class="honorpriceInfo">
                    <h2>₹<%=2000+  +`${hotel[0].property_id.substring(0, 5)}`%></h2>
                    <img src="/icons/moreinfo.svg" alt="">
                </div>
                
                <a href="#" class="btnMini largeBtn ">Book</a>
            </div>
           
        </div>
        <div class="hrLine"></div>



        <div class="discountPrice">
            <div class="bestPrice">
                <h3>2X Points</h3>
                <p>Change or cancel up to 1 day before arrival. Earn Double Hilton Honors Points.</p>
            </div>
            <div>
                
            </div>
            <div class="honorPrice">
               
                <div class="honorpriceInfo">
                    <h2>₹<%=1000+  +`${hotel[0].property_id.substring(0, 5)}`%></h2>
                    <img src="/icons/moreinfo.svg" alt="">
                </div>
                
                <a href="#" class="btnMini largeBtn ">Book</a>
            </div>
           
        </div>
        <div class="hrLine"></div>


        
    </div>
    <div class="selectRight">
        <div class="selectedHotel">
            <img src="https://www.hilton.com/im/en/LONWAHI/3041932/deluxe-superior-3069.jpg?impolicy=crop&cw=6192&ch=3519&gravity=NorthWest&xposition=0&yposition=169&rw=760&rh=432" alt="">
            <h3><%= hotel[0].property_name%> </h3>
            <p> <img src="/icons/filledCircle.svg" alt=""> Select a Rate</p>
            <div class="verticalLine"></div>
            <p> <img src="/icons/circle.svg" alt=""> Payment and Guest Details</p>
        </div>
    </div>
</div>

</div>

<div class="filterDiv" >


<p> <%= hotel[0].property_name%> </p>


</div>

<!-- FOOTER -->

<hr class="borderBottom hrFooter">
